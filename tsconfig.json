{
    "compileOnSave": true,
    "compilerOptions": {
        "downlevelIteration": true,
        "sourceMap": false,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "webdriverio/async"
        ],
        "declaration": true,
        "outDir": "./lib"
    },
    "include": [
        "src/**/*"
    ],
}
