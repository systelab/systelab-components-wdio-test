{
    "compileOnSave": true,
    "compilerOptions": {
        "downlevelIteration": true,
        "sourceMap": false,
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "@wdio/globals/types",
            "@wdio/jasmine-framework",
            "jasmine"
        ],
        "declaration": true,
        "outDir": "./lib"
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
}
