{
    "compileOnSave": true,
    "compilerOptions": {
        "downlevelIteration": true,
        "sourceMap": false,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "types": [
            "node",
            "webdriverio/async",
            "@wdio/jasmine-framework"
        ],
        "declaration": true,
        "outDir": "./lib"
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
}
